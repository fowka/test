<div class="modal" id="modal-{{ slug }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Расширенный фильтр для поля «{{ label }}»</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-borderless w-auto">
                    <thead>
                    <tr>
                        <th class="py-0" colspan="2">Значение или диапазон значений</th>
                    </tr>
                    <tr>
                        <th class="py-0">С</th>
                        <th class="py-0">По</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for row in range(1, filterRows) %}
                        <tr>
                            <td>
                                <label><input class="form-control" name="{{ slug }}[{{ row }}][from]" data-row="{{ row }}" data-column="1"></label>
                            </td>
                            <td>
                                <label><input class="form-control" name="{{ slug }}[{{ row }}][to]" data-row="{{ row }}" data-column="2"></label>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">ОК</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-light">Очистить фильтр</button>
            </div>
        </div>
    </div>
</div>
